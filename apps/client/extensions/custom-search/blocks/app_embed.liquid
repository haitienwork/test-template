{% if block.settings.enable_product_search %}
  {% render 'ght.product.search' %}
{% endif %}

{% if block.settings.enable_product_filter %}
  {% render 'ght.product.filter' %}
{% endif %}

{% schema %}
{
  "name": "GHT Product Search",
  "target": "body",
  "javascript": "ght.product.js",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_product_search",
      "label": "Product Search",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "enable_product_filter",
      "label": "Product Filter",
      "default": false
    }
  ]
}
{% endschema %}
