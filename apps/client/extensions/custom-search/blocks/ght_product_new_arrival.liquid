{% assign sorted_products = collections.all.products | sort: 'created_at' | reverse %}

<section class="ght-product-new-arrival">
  <h2>{{ block.settings.title }}</h2>
  <ul style="display: grid; grid-template-columns: repeat(5, 1fr); gap: 1rem; list-style: none;">
    {% for product in sorted_products limit: block.settings.product_to_show %}
      <li class="">
        {% render 'ght.product.card', product_card: product %}
      </li>
    {% endfor %}
  </ul>
</section>

{% schema %}
{
  "name": "GHT Product New Arrival",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "New Arrival"
    },
    {
      "type": "range",
      "id": "product_to_show",
      "label": "Product to show",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 10
    }
  ]
}
{% endschema %}
